# .env.example - Personal development template
# Copy to .env for local testing

# Inverter Connection
HUAWEI_MODBUS_HOST=192.168.1.100
HUAWEI_MODBUS_PORT=502
HUAWEI_MODBUS_AUTO_DETECT_SLAVE_ID=true
HUAWEI_SLAVE_ID=1

# MQTT Broker (lokal oder HA)
HUAWEI_MQTT_HOST=localhost
HUAWEI_MQTT_PORT=1883
HUAWEI_MQTT_USER=
HUAWEI_MQTT_PASSWORD=

# Topic & Logging
HUAWEI_MQTT_TOPIC=huawei-solar-dev
HUAWEI_LOG_LEVEL=DEBUG
HUAWEI_STATUS_TIMEOUT=180
HUAWEI_POLL_INTERVAL=30
