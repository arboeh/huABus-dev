# .env.example - Personal development template
# Copy to .env for local testing

# Inverter Connection
HUAWEI_MODBUS_HOST=192.168.X.XXX
HUAWEI_MODBUS_PORT=502

# AUTO-DETECTION SETTINGS
HUAWEI_SLAVEID_AUTO=true
HUAWEI_SLAVE_ID=1

# MQTT Broker (lokal oder HA)
HUAWEI_MODBUS_MQTT_BROKER=localhost
HUAWEI_MODBUS_MQTT_PORT=1883
HUAWEI_MODBUS_MQTT_USER=
HUAWEI_MODBUS_MQTT_PASSWORD=

# Topic & Logging
HUAWEI_MODBUS_MQTT_TOPIC=huawei-solar-dev
HUAWEI_LOG_LEVEL=DEBUG
HUAWEI_STATUS_TIMEOUT=180
HUAWEI_POLL_INTERVAL=30
